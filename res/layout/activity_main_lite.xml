<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bkgnd" >

    <TextView
        android:id="@+id/textPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dip"
        android:layout_marginRight="5dip"
        android:text="@string/about_label"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="17sp"
        android:textStyle="bold" />
    <CheckBox
        android:id="@+id/checkToWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPreferences"
        android:text="@string/checkbox_text"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="italic"/>
    <ImageView
        android:id="@+id/cardSnap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="38dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/desc" />

    <TextView
        android:id="@+id/tvLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardSnap"
        android:layout_marginTop="1dp"
        android:scrollbars="vertical"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="16sp"
        android:textStyle="normal" />

</RelativeLayout>

